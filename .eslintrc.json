{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb", "eslint-config-prettier", "plugin:cypress/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "quotes": ["warn", "double"],
    "semi": "off",
    "consistent-return": "off",
    "no-template-curly-in-string": "off",
    "no-unused-vars": "warn",
    "react/jsx-props-no-spreading": "off",
    "react/jsx-no-bind": "off",
    "react/function-component-definition": [
      2,
      {
        "namedComponents": "arrow-function",
        "unnamedComponents": "arrow-function"
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-shadow": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "import/prefer-default-export": "off",
    "no-underscore-dangle": "off",
    "react/prop-types": "off",
    "no-nested-ternary": "off",
    "react/no-unescaped-entities": "off",
    "jsx-a11y/click-events-have-key-events": "off",
    "jsx-a11y/no-static-element-interactions": "off",
    "cypress/no-unnecessary-waiting": "off",
    "eslint-disable quotes": "off",
    "eslint-disable import/named": "off",
    "eslint-disable-next-line no-unused-vars": "off",
    "eslint-disable no-underscore-dangle": "off",
    "eslint-disable react/jsx-props-no-spreading": "off",
    "eslint-disable react/no-unescaped-entities": "off",
    "eslint-disable import/no-unresolved": "off",
    "eslint-disable no-nested-ternary": "off",
    "eslint-disable-next-line no-empty": "off",
    "import/no-named-as-default": "off"
  }
}
